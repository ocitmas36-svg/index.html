    <script>
        // 1. EDIT DATA KAMU DI SINI
        const myProjects = [
            { title: "Desain Kaos Kece", desc: "Desain kaos distro menggunakan Photoshop.", icon: "üëï" },
            { title: "Web Portofolio", desc: "Project web satu file pakai Tailwind CSS.", icon: "üíª" },
            { title: "Sistem Kasir PHP", desc: "Aplikasi kasir sederhana untuk UMKM.", icon: "üí∞" },
            { title: "Logo Branding", desc: "Pembuatan identitas visual brand lokal.", icon: "üé®" }
        ];

        // 2. FUNGSI MENAMPILKAN DATA
        function displayProjects() {
            const grid = document.getElementById('project-grid');
            myProjects.forEach(p => {
                grid.innerHTML += `
                    <div class="p-8 border border-gray-800 rounded-3xl glass card-hover cursor-pointer group">
                        <div class="w-12 h-12 bg-green-500 rounded-xl mb-6 flex items-center justify-center text-black font-bold text-xl">${p.icon}</div>
                        <h4 class="text-xl font-bold mb-2 group-hover:text-green-500 transition uppercase tracking-tight">${p.title}</h4>
                        <p class="text-gray-500 mb-6 text-sm">${p.desc}</p>
                        <span class="text-xs font-bold text-green-500 border border-green-500 px-3 py-1 rounded-full uppercase tracking-widest italic">Manual Entry</span>
                    </div>`;
            });
        }

        function toggleTheme() {
            const body = document.getElementById('body');
            const icon = document.getElementById('theme-icon');
            if (body.classList.contains('bg-black')) {
                body.classList.replace('bg-black', 'bg-gray-100');
                body.classList.replace('text-white', 'text-black');
                icon.innerText = '‚òÄÔ∏è';
            } else {
                body.classList.replace('bg-gray-100', 'bg-black');
                body.classList.replace('text-black', 'text-white');
                icon.innerText = 'üåô';
            }
        }

        displayProjects();
    </script>
